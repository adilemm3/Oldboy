@model BarberShop.Entities.MasterServices

@{
    ViewData["Title"] = "Изменить услугу парикмахера";
}

<h4>Изменить услугу парикмахера</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (ViewBag.Error != null)
            {
                <label style="color: #a94442;">@ViewBag.Error</label>
            }
            <div class="form-group">
                <select asp-for="Service.NameOfService" asp-items="@new SelectList(ViewBag.EditServiseName)" class="form-control"></select>
            </div>
            <input type="hidden" asp-for="MasterId" />
            <input type="hidden" asp-for="ServiceId" />
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Get" class = "btn btn-primary" asp-route-masterId="@Model.MasterId">Вернуться к списку услуг парикмахера</a>
</div>

