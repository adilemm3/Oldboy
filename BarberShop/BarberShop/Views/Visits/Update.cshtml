@model BarberShop.Entities.Visit
@{
    ViewData["Title"] = "Изменить посещение";
}


<h4>Изменить информацию о посещении</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (ViewBag.Error != null)
            {
                <label style="color: #a94442;">@ViewBag.Error</label>
            }
            <div class="form-group">
                <label asp-for="Client.Name" class="control-label">ФИО клиента</label>
                @Html.DropDownListFor(model => model.ClientId, ViewBag.sm as SelectList, new { @class = "form-control" })
                <span asp-validation-for="Client.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalCost" class="control-label">Итоговая сумма</label>
                <input asp-for="TotalCost" class="form-control" />
                <span asp-validation-for="TotalCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfVisit" class="control-label">Дата и время посещения</label>
                <input asp-for="DateOfVisit" class="form-control" />
                <span asp-validation-for="DateOfVisit" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetAll" class = "btn btn-primary">Вернуться к посещениям</a>
</div>

